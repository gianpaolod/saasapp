<li id="micropost-<%= micropost.id %>">
  <%= image_tag micropost.user.profile.avatar.url, class: 'avatar-small' %>
  <span class="user"><%= link_to micropost.user.profile.first_name + " " + micropost.user.profile.last_name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost,  method: :delete, 
                                        data: { confirm: "you sure?" } %>
    <% else  %>
      <%= link_to "follow", micropost,  method: :follow, 
                                        data: { confirm: "you sure?" } %>
    <% end %>
  </span>
</li>