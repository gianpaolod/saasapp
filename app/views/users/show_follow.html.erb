<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-small' %>
      <h1><%= @user.profile.first_name + " " + @user.profile.last_name %></h1>
      <span><%= link_to "View my profile" %></span>
      <span><b>Micropost:</b><%= @user.microposts.count %></span>
    </section>
    <selection class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= image_tag user.profile.avatar.url, class: 'avatar-small' %>
          <% end %>
        </div>
      <% end %>
    </selection>
  </aside>
</div>